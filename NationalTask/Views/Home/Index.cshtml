@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center py-5">
    <h1 class="display-4 mb-4">Welcome to NationalTask</h1>
    <p class="lead mb-5">Manage your bills and products with ease</p>
    
    @if (!User.Identity?.IsAuthenticated == true)
    {
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <h5 class="card-title mb-3">Get Started Today</h5>
                        <p class="card-text text-muted mb-4">Join thousands of users who are already managing their bills efficiently.</p>
                        <div class="d-grid gap-3">
                            <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg">Create Account</a>
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg">Sign In</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <h5 class="card-title mb-3">Welcome Back!</h5>
                        <p class="card-text text-muted mb-4">You're all set to manage your bills and products.</p>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <a asp-controller="Customer" asp-action="MyBills" class="btn btn-primary btn-lg w-100">View My Bills</a>
                            </div>
                            <div class="col-md-6">
                                <a asp-controller="Customer" asp-action="CreateBill" class="btn btn-outline-primary btn-lg w-100">Create New Bill</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
