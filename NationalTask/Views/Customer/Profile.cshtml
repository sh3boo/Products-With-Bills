@model NationalTask.DTOs.CustomerProfileDto

@{
    ViewData["Title"] = "Profile";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header text-center bg-primary text-white">
                    <h2 class="mb-0">Customer Profile</h2>
                    <p class="text-white-50 mb-0">Welcome back, @Model.Name!</p>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title mb-4">Personal Information</h5>
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <div>
                                                <small class="text-muted d-block">Full Name</small>
                                                <strong>@Model.Name</strong>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <div>
                                                <small class="text-muted d-block">Registration Date</small>
                                                <strong>@Model.RegistrationDate.ToString("dd/MM/yyyy")</strong>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <div>
                                                <small class="text-muted d-block">Total Bills</small>
                                                <strong class="text-primary">@Model.TotalBills</strong>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <div>
                                                <small class="text-muted d-block">Member Since</small>
                                                <strong>@Model.RegistrationDate.ToString("MMMM yyyy")</strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="card bg-primary text-white">
                                <div class="card-body text-center">
                                    <h5 class="card-title mb-4">Quick Actions</h5>
                                    <div class="d-grid gap-3">
                                        <a asp-action="CreateBill" class="btn btn-light btn-lg">Create New Bill</a>
                                        <a asp-action="MyBills" class="btn btn-outline-light btn-lg">View My Bills</a>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-outline-light btn-lg w-100">Logout</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 